<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="MSF Stock"
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:id="@+id/button" android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.6"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="14sp" android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="181dp"
            android:layout_height="141dp" app:srcCompat="@drawable/logo_msf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView"
            tools:layout_editor_absoluteY="390dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>